<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/note_nav_host"
    app:startDestination="@id/listNote">

    <fragment
        android:id="@+id/listNote"
        android:name="com.example.notely.ui.ListNote"
        android:label="Note"
        tools:layout="@layout/fragment_list_note">
        <action
            android:id="@+id/action_listNote_to_newNote"
            app:destination="@id/newNote" />
        <action
            android:id="@+id/action_listNote_to_updateNote"
            app:destination="@id/updateNote" />
    </fragment>
    <fragment
        android:id="@+id/newNote"
        android:name="com.example.notely.ui.NewNote"
        android:label="Add Note"
        tools:layout="@layout/fragment_new_note">
        <action
            android:id="@+id/action_newNote_to_listNote"
            app:destination="@id/listNote" />
    </fragment>
    <fragment
        android:id="@+id/updateNote"
        android:name="com.example.notely.ui.UpdateNote"
        android:label="Update Note"
        tools:layout="@layout/fragment_update_note">
        <action
            android:id="@+id/action_updateNote_to_listNote"
            app:destination="@id/listNote" />
        <argument
            android:name="currentitem"
            app:argType="com.example.notely.Data.models.Note" />
    </fragment>
</navigation>